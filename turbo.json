{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "SUBGRAPH_BASE",
    "DEBANK_API_KEY",
    "DEBANK_API_URL",
    "RPC_GATEWAY",
    "GET_TRIGGERS_URL",
    "SKIP_VALIDATION",
    "AWS_REGION",
    "AWS_PROFILE",
    "POWERTOOLS_LOG_LEVEL",
    "SDK_API_URL",
    "SST_APP_NAME"
  ],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "prebuild": {
      "dependsOn": ["^prebuild"],
      "outputs": ["src/types/graphql/generated.ts"]
    },
    "build": {
      "dependsOn": ["prebuild", "^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "artifacts/**", ".sst/**"]
    },
    "test": {
      "dependsOn": ["prebuild", "build", "^test"]
    },
    "lint": {
      "dependsOn": ["prebuild", "build", "^lint"]
    },
    "cicheck": {
      "dependsOn": ["prebuild", "build", "test", "lint"]
    }
  }
}
