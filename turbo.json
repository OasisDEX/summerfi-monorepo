{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "SUBGRAPH_BASE",
    "DEBANK_API_KEY",
    "DEBANK_API_URL",
    "RPC_GATEWAY",
    "GET_TRIGGERS_URL",
    "SKIP_VALIDATION",
    "AWS_REGION",
    "AWS_PROFILE",
    "POWERTOOLS_LOG_LEVEL"
  ],
  "pipeline": {
    "prebuild": {
      "dependsOn": ["^prebuild"],
      "outputs": ["src/types/graphql/generated.ts"]
    },
    "build": {
      "dependsOn": ["^build", "prebuild"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "artifacts/**", ".sst/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "tsc": {
      "dependsOn": ["^tsc"]
    }
  }
}
