{
  "extends": "@summerfi/typescript-config/tsconfig.nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "noEmit": true,
    "module": "esnext",
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./.eslintrc.cjs"
  ],
  "exclude": ["node_modules", "dist", "out/**/*", "scripts/**/*", ".next"]
}
