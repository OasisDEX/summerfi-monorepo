{
  "extends": "@summerfi/typescript-config/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@summerfi/sdk-common/*": ["node_modules/@summerfi/sdk-common/src/*"],
      "@summerfi/sdk-common": ["node_modules/@summerfi/sdk-common/src/index.ts"],
      "@summerfi/common": ["node_modules/@summerfi/common/src/index.ts"],
      "@summerfi/configuration-provider": [
        "node_modules/@summerfi/configuration-provider/src/index.ts"
      ],
      "@summerfi/testing-utils": ["node_modules/@summerfi/testing-utils/src/index.ts"],
      "@summerfi/testing-utils/*": ["node_modules/@summerfi/testing-utils/src/*"],
      "@summerfi/contracts-provider-service": [
        "node_modules/@summerfi/contracts-provider-service/src/index.ts"
      ],
      "@summerfi/allowance-manager-service": [
        "node_modules/@summerfi/allowance-manager-service/src/index.ts"
      ],
      "@summerfi/blockchain-client-provider": [
        "node_modules/@summerfi/blockchain-client-provider/src/index.ts"
      ],
      "@summerfi/serverless-shared/*": ["node_modules/@summerfi/serverless-shared/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "e2e/**/*.ts",
    "src/**/*.json",
    "../sdk-common/src/common/implementation/ArmadaPosition.ts",
    "../sdk-common/src/common/implementation/ArmadaPositionId.ts",
    "../sdk-common/src/common/implementation/ArmadaProtocol.ts",
    "../sdk-common/src/common/implementation/ArmadaVault.ts",
    "../sdk-common/src/common/implementation/ArmadaVaultId.ts",
    "../sdk-common/src/common/implementation/ArmadaVaultInfo.ts",
    "../sdk-common/tests/ArmadaPool.spec.ts",
    "../sdk-common/tests/ArmadaPoolInfo.spec.ts",
    "../sdk-common/tests/ArmadaPosition.spec.ts",
    "../sdk-common/tests/ArmadaPositionId.spec.ts",
    "../sdk-common/tests/ArmadaProtocol.spec.ts",
    "../sdk-common/tests/ArmadaVaultId.spec.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
