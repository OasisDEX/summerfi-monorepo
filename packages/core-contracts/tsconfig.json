{
  "extends": "@summerfi/typescript-config/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~core-contracts": ["./src/index.ts"],
      "~core-contracts/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json", "scripts/**/*.ts", "hardhat.config.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/deployments/hardhat/*.json", "src/local.ts"]
}
