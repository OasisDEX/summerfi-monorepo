{
  "extends": "@summerfi/typescript-config/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "types": ["jest", "node"],
    "paths": {
      "~sdk": ["./index.ts"],
      "~sdk/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
