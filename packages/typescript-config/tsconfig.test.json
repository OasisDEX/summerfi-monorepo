{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["node", "jest", "jest-extended"],
    "baseUrl": ".",
    "paths": {
      "@summerfi/serverless-shared": ["../serverless-shared/src/index.ts"],
      "@summerfi/serverless-shared/*": ["../serverless-shared/src/*"],
      "@summerfi/sdk/*": ["../sdk/src/*"],
      "~sdk/*": ["../sdk/src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ES2022",
      "target": "ES2022"
    }
  }
}
