{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "es2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest", "jest-extended"]
  },
  "references": [
    {
      "path": "../serverless-contracts/tsconfig.json"
    },
    {
      "path": "../serverless-shared/tsconfig.json"
    },
    {
      "path": "../prices-subgraph/tsconfig.json"
    },
    {
      "path": "../automation-subgraph/tsconfig.json"
    }
  ]
}
