{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "preserveWatchOutput": true,
    "plugins": [{ "name": "next" }],
    "incremental": true,
    "allowJs": true,
    "jsx": "preserve",
    "types": ["node", "jest", "jest-extended"]
  },
  "include": ["src", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
